#!/bin/bash
# Copyright Â© 2012-2014 Martin Ueding <dev@martin-ueding.de>

local-logger() {
    echo "mu-startup: $@"
}

xrandr --dpi 96

think-dock
think-rotate normal

{
    sleep 10
    # If I use Awesome WM without and KDE, start ``nm-applet``.
    if ! pgrep plasma-desktop && ! pgrep nm-applet
    then
        local-logger $"Neither plasma-desktop nor nm-applet running."
        nm-applet &
        disown
    else
        local-logger $"plasma-desktop or nm-applet running."
    fi
} &

mu-wakeup

wait
